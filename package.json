{
  "name": "intensity-segments",
  "version": "1.0.0",
  "description": "High-performance interval intensity management with TypeScript",
  "main": "dist/IntensitySegments.js",
  "types": "dist/IntensitySegments.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "dev": "npm run build",
    "start": "npm run build",
    "example": "npm run build && node dist/example.js",
    "debug": "npm run build && node dist/debug.js",
    "prepare": "npm run build",
    "clean": "rm -rf dist coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "algorithm",
    "segments",
    "intervals",
    "data-structure",
    "typescript",
    "differential-array",
    "performance"
  ],
  "author": "Judy",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
} 